{
  DbaseFileHeader header=reader.getHeader();
  for (int i=0; i < header.getNumFields(); i++) {
    if (header.getFieldName(i).equals(attribute)) {
      attributeColumn=i;
      attributeClass=header.getFieldClass(i);
      numRecords=header.getNumRecords();
      attributeType=header.getFieldType(i);
switch (attributeType) {
case 'C':
        record_size=header.getFieldLength(i);
      break;
case 'N':
    if (attributeClass.isInstance(new Integer(0)))     record_size=4;
 else     record_size=8;
  break;
case 'F':
record_size=8;
break;
case 'D':
record_size=8;
break;
case 'L':
record_size=1;
break;
default :
record_size=header.getFieldLength(i);
}
record_size+=8;
return true;
}
}
return false;
}
