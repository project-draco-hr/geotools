{
  if (mapContent != null) {
    if (!isShowing()) {
      pendingDisplayArea=new ReferencedEnvelope(envelope);
    }
 else {
      doSetDisplayArea(envelope);
      clearLabelCache.set(true);
      drawBaseImage(false);
    }
  }
 else {
    throw new IllegalStateException("Map context must be set before setting the display area");
  }
}
