{
  if (envelope == null) {
    throw new IllegalArgumentException("envelope must not be null");
  }
  if (!isShowing() || getVisibleRect().isEmpty()) {
    pendingDisplayArea=new ReferencedEnvelope(envelope);
  }
 else {
    doSetDisplayArea(envelope);
    clearLabelCache.set(true);
    drawBaseImage(false);
  }
}
