{
  if (layerTable != null) {
    layerTable.repaint(event.getElement());
  }
  int reason=event.getMapLayerEvent().getReason();
  if (reason == MapLayerEvent.DATA_CHANGED) {
    setFullExtent();
  }
  if (reason != MapLayerEvent.SELECTION_CHANGED) {
    clearLabelCache.set(true);
    drawBaseImage(false);
  }
  repaint();
}
