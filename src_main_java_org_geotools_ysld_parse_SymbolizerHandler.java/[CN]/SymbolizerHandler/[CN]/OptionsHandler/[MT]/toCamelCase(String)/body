{
  if (str == null || str.isEmpty()) {
    return str;
  }
  StringBuilder sb=new StringBuilder();
  boolean upper=false;
  for (int i=0; i < str.length(); i++) {
    char ch=str.charAt(i);
    if (ch == '-') {
      upper=true;
    }
 else {
      sb.append(upper ? Character.toUpperCase(ch) : ch);
      upper=false;
    }
  }
  return sb.toString();
}
