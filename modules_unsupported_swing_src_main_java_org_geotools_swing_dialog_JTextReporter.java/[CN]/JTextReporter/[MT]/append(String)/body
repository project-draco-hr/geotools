{
  if (EventQueue.isDispatchThread()) {
    doAppend(text);
  }
 else {
    try {
      SwingUtilities.invokeAndWait(new Runnable(){
        @Override public void run(){
          doAppend(text);
        }
      }
);
    }
 catch (    InterruptedException intEx) {
      return;
    }
catch (    Exception ex) {
      throw new IllegalStateException(ex);
    }
  }
}
