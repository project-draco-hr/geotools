{
  if (!getDriverCapabilities().contains(operation))   throw new UnsupportedOperationException("Operation " + operation + " is not supported by this driver");
  if (url == null) {
    if (!params.containsKey(URL.key))     throw new IllegalArgumentException("Unable to find parameter URL in parameters " + params.toString());
    url=(URL)params.get(URL.key);
  }
switch (operation) {
case CONNECT:
    return canConnect(url,params);
case DELETE:
  return canDelete(url,params);
case CREATE:
return canCreate(url,params);
default :
throw new IllegalArgumentException("Unrecognized operation " + operation);
}
}
