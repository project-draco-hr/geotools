{
  if (distance < this.getStartParam() || distance > this.getEndParam())   throw new IllegalArgumentException("Distance parameter not in parametrisation range.");
  int index=0;
  while (index < this.curveSegments.size() && distance > this.curveSegments.get(index).getEndParam()) {
    index++;
  }
  return this.curveSegments.get(index).forParam(distance);
}
