{
  String name=null;
  if (provider != null) {
    final String[] formats=provider.getFormatNames();
    if (formats != null) {
      int length=0;
      for (int i=0; i < formats.length; i++) {
        final String candidate=formats[i];
        if (candidate != null) {
          final int lg=candidate.length();
          if (lg > length) {
            length=lg;
            name=candidate;
          }
        }
      }
    }
  }
  return name;
}
