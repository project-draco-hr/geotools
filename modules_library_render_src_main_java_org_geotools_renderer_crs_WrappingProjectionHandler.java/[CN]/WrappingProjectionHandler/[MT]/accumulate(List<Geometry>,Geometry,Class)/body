{
  for (int i=0; i < geometry.getNumGeometries(); i++) {
    Geometry g=geometry.getGeometryN(i);
    Class gtype;
    if (g instanceof GeometryCollection) {
      gtype=accumulate(geoms,g,geomType);
    }
 else {
      geoms.add(g);
      gtype=g.getClass();
    }
    if (geomType == null) {
      geomType=g.getClass();
    }
 else     if (!g.getClass().equals(geomType)) {
      geomType=Geometry.class;
    }
  }
  return geomType;
}
