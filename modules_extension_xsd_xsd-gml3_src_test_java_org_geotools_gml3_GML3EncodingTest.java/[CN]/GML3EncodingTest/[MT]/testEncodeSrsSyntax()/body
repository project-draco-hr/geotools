{
  GMLConfiguration gml=new GMLConfiguration();
  Document dom=new Encoder(gml).encodeAsDOM(GML3MockData.point(),GML.Point);
  assertTrue(dom.getDocumentElement().getAttribute("srsName").startsWith("urn:x-ogc:def:crs:EPSG:"));
  gml.setSrsSyntax(SrsSyntax.OGC_URN);
  dom=new Encoder(gml).encodeAsDOM(GML3MockData.point(),GML.Point);
  assertTrue(dom.getDocumentElement().getAttribute("srsName").startsWith("urn:ogc:def:crs:EPSG::"));
  gml.setSrsSyntax(SrsSyntax.OGC_HTTP_URI);
  dom=new Encoder(gml).encodeAsDOM(GML3MockData.point(),GML.Point);
  assertTrue(dom.getDocumentElement().getAttribute("srsName").startsWith("http://www.opengis.net/def/crs/EPSG/0/"));
}
