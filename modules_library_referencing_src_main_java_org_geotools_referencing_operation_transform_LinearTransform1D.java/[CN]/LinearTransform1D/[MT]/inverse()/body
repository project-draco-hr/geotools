{
  if (inverse == null) {
    if (isIdentity()) {
      inverse=this;
    }
 else     if (scale != 0) {
      final LinearTransform1D inverse;
      inverse=create(1 / scale,-offset / scale);
      inverse.inverse=this;
      this.inverse=inverse;
    }
 else {
      inverse=(MathTransform1D)super.inverse();
    }
  }
  return inverse;
}
