{
  if (debugDir == null)   throw new NullPointerException("Unable to write the provided coverage in the debug directory");
  if (DEBUG == false)   throw new IllegalStateException("Unable to write the provided coverage since we are not in debug mode");
  try {
    ImageIO.write(raster,"tiff",new File(debugDir,fileName + ".tiff"));
  }
 catch (  IOException e) {
    LOGGER.log(Level.SEVERE,e.getLocalizedMessage(),e);
  }
}
