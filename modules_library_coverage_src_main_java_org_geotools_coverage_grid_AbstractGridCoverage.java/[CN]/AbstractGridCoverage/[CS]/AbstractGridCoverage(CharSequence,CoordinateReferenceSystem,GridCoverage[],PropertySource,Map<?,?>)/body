{
  super(name,crs,propertySource,properties);
  if (sources != null) {
switch (sources.length) {
case 0:
      this.sources=null;
    break;
case 1:
  this.sources=Collections.singletonList(sources[0]);
break;
default :
this.sources=Collections.unmodifiableList(Arrays.asList(sources.clone()));
break;
}
}
 else {
this.sources=null;
}
}
