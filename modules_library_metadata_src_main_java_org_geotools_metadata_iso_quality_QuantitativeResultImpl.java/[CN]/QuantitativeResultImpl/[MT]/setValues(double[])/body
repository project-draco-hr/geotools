{
  final List<Record> records;
  if (newValues == null) {
    records=null;
  }
 else {
    final Record[] data=new Record[newValues.length];
    for (int i=0; i < newValues.length; i++) {
      data[i]=new SimpleRecord(newValues[i]);
    }
    records=Arrays.asList(data);
  }
  setValues(records);
}
