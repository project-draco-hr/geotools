{
  FileChannel in=null;
  FileChannel out=null;
  try {
    in=new FileInputStream(storage).getChannel();
    out=new FileOutputStream(dest).getChannel();
    int maxCount=(64 * 1024 * 1024) - (32 * 1024);
    long size=in.size();
    long position=0;
    while (position < size) {
      position+=in.transferTo(position,maxCount,out);
    }
  }
  finally {
    if (in != null) {
      in.close();
    }
    if (out != null) {
      out.close();
    }
  }
}
