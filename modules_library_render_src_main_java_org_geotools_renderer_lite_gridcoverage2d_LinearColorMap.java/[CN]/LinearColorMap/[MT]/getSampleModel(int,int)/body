{
  if (width <= 0)   throw new IllegalArgumentException(org.geotools.resources.i18n.Errors.format(ErrorKeys.ILLEGAL_ARGUMENT_$2,"width",width));
  if (height <= 0)   throw new IllegalArgumentException(org.geotools.resources.i18n.Errors.format(ErrorKeys.ILLEGAL_ARGUMENT_$2,"height",height));
  initColorModel();
  return new PixelInterleavedSampleModel(this.colorModel.getTransferType(),width,height,1,width,new int[1]);
}
