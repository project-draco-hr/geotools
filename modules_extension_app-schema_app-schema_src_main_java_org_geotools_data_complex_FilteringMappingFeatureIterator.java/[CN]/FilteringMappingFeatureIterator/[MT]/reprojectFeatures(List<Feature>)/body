{
  if (targetCrs != null) {
    List<Feature> features=new ArrayList<Feature>();
    GeometryCoordinateSequenceTransformer transformer=new GeometryCoordinateSequenceTransformer();
    Iterator<SimpleFeature> reprojectedFeatures;
    try {
      Iterator iterator=srcFeatures.iterator();
      reprojectedFeatures=new ReprojectingIterator(iterator,mappedSource.getSchema().getCoordinateReferenceSystem(),targetCrs,(SimpleFeatureType)this.sourceFeatures.getSchema(),transformer);
      while (reprojectedFeatures.hasNext()) {
        features.add(reprojectedFeatures.next());
      }
    }
 catch (    Exception e) {
      close();
      throw new RuntimeException("Failed to reproject features in app-schema!",e);
    }
    return features;
  }
  return srcFeatures;
}
