{
  tolerance=Math.abs(tolerance);
  if (numRow != numCol) {
    return false;
  }
  int index=0;
  for (int j=0; j < numRow; j++) {
    for (int i=0; i < numCol; i++) {
      double e=elt[index++];
      if (i == j) {
        e--;
      }
      if (!(Math.abs(e) <= tolerance)) {
        return false;
      }
    }
  }
  return true;
}
