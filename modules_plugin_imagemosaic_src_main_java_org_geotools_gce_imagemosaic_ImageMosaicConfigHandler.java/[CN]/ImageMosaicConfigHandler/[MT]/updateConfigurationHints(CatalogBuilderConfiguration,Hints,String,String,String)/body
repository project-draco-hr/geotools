{
  final boolean isAbsolutePath=Boolean.parseBoolean(configuration.getParameter(Prop.ABSOLUTE_PATH));
  hints=updateHints(ancillaryFile,isAbsolutePath,rootMosaicDir,configuration,hints,Utils.AUXILIARY_FILES_PATH);
  hints=updateHints(datastoreFile,isAbsolutePath,rootMosaicDir,configuration,hints,Utils.AUXILIARY_DATASTORE_PATH);
  setReader(hints,true);
}
