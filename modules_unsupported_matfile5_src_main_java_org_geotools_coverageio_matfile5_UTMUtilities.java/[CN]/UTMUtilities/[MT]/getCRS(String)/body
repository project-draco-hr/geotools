{
  CoordinateReferenceSystem crs=null;
  if (epsgCode != null && epsgCode.trim().length() > 1) synchronized (CRS_MAP) {
    if (!CRS_MAP.containsKey(epsgCode)) {
      crs=CRS.decode(epsgCode);
      CRS_MAP.put(epsgCode,crs);
    }
 else {
      crs=CRS_MAP.get(epsgCode);
      if (crs == null) {
        crs=CRS.decode(epsgCode);
        CRS_MAP.put(epsgCode,crs);
      }
    }
  }
  return crs;
}
