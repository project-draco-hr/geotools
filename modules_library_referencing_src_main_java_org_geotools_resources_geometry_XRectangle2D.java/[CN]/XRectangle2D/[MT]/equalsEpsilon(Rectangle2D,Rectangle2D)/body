{
  double dx=0.5 * Math.abs(rect1.getWidth() + rect2.getWidth());
  double dy=0.5 * Math.abs(rect1.getHeight() + rect2.getHeight());
  if (dx > 0)   dx*=EPS;
 else   dx=EPS;
  if (dy > 0)   dy*=EPS;
 else   dy=EPS;
  return equalsEpsilon(rect1.getMinX(),rect2.getMinX(),dx) && equalsEpsilon(rect1.getMinY(),rect2.getMinY(),dy) && equalsEpsilon(rect1.getMaxX(),rect2.getMaxX(),dx)&& equalsEpsilon(rect1.getMaxY(),rect2.getMaxY(),dy);
}
