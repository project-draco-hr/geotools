{
  if (worldfile == null)   throw new IllegalArgumentException(Errors.format(ErrorKeys.NULL_ARGUMENT_$1,"inFile"));
  if (bufferSize <= 0)   throw new IllegalArgumentException(Errors.format(ErrorKeys.ILLEGAL_ARGUMENT_$2,"bufferSize",bufferSize));
  parseWorldFile(new BufferedReader(new InputStreamReader(worldfile.openStream())));
}
