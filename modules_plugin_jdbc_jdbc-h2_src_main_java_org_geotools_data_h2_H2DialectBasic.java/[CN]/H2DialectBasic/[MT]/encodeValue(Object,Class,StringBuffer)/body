{
  if (byte[].class == type) {
    byte[] b=(byte[])value;
    if (value != null) {
      sql.append("'");
      for (int i=0; i < b.length; i++) {
        sql.append(Integer.toString((b[i] & 0xff) + 0x100,16).substring(1));
      }
      sql.append("'");
    }
 else {
      sql.append("NULL");
    }
  }
 else {
    super.encodeValue(value,type,sql);
  }
}
