{
  final Graphics2D graphics=(Graphics2D)target.getGraphics();
  final int width=target.getWidth();
  final int height=target.getHeight();
  graphics.setColor(Color.BLUE);
  graphics.fillRect(0,0,width,height);
  for (int x=0; x < width; x++) {
    final Color color=makeCoordinateColor(MathUtils.interpolate(x,0,width,area.getX1(),area.getX2()));
    graphics.setColor(color);
    graphics.drawLine(x,0,x,height);
  }
  graphics.setColor(Color.WHITE);
  graphics.drawRect(0,0,width - 1,height - 1);
  graphics.drawString("x:" + area.getCenterX() + ", y:"+ area.getCenterY(),width / 8,height / 2);
  pauseRandomTime(50,20);
}
