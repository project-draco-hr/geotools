{
  final org.gdal.ogr.Geometry ogrGeom;
  if (USE_WKB) {
    byte[] wkb=wkbWriter.write(geometry);
    ogrGeom=ogr.CreateGeometryFromWkb(wkb,null);
    if (ogrGeom == null)     throw new RuntimeException("Could not turn JTS geometry into an OGR one thought WKB");
  }
 else {
    String wkt=wktWriter.write(geometry);
    ogrGeom=ogr.CreateGeometryFromWkt(wkt,null);
    if (ogrGeom == null)     throw new RuntimeException("Could not turn JTS geometry into an OGR one thought WKT");
  }
  return ogrGeom;
}
