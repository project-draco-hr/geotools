{
  if (!icm.hasAlpha()) {
    ignoreTransparents=false;
  }
  final int mapSize=icm.getMapSize();
  for (int i=0; i < mapSize; i++) {
    if (ignoreTransparents) {
      if (icm.getAlpha(i) == 0) {
        continue;
      }
    }
    final int green=icm.getGreen(i);
    if (green != icm.getRed(i) || green != icm.getBlue(i)) {
      return false;
    }
  }
  return true;
}
