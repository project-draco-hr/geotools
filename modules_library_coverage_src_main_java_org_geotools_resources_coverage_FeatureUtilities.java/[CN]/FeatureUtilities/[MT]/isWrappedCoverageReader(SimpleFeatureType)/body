{
  if (!"GridCoverage".equals(featureType.getName().getLocalPart()))   return false;
  if (featureType.getAttributeCount() != 3)   return false;
  AttributeDescriptor polyDescriptor=featureType.getDescriptor("geom");
  if (polyDescriptor == null || !Polygon.class.equals(polyDescriptor.getType().getBinding()))   return false;
  AttributeDescriptor gridDescriptor=featureType.getDescriptor("grid");
  if (gridDescriptor == null || !AbstractGridCoverage2DReader.class.equals(gridDescriptor.getType().getBinding()))   return false;
  AttributeDescriptor paramDescriptor=featureType.getDescriptor("params");
  if (paramDescriptor == null || !GeneralParameterValue[].class.equals(paramDescriptor.getType().getBinding()))   return false;
  return true;
}
