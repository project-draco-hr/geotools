{
  if (authorizations == null) {
    throw new IllegalStateException("Transaction has been closed");
  }
  int problemCount=0;
  IOException io=null;
  State state;
  authorizations.add(authID);
  for (Iterator i=stateLookup.values().iterator(); i.hasNext(); ) {
    state=(State)i.next();
    try {
      state.addAuthorization(authID);
    }
 catch (    IOException e) {
      problemCount++;
      io=e;
    }
  }
  if (io != null) {
    if (problemCount == 1) {
      throw io;
    }
    throw new DataSourceException("setAuthorization encountered " + problemCount + " problems - the first was",io);
  }
}
