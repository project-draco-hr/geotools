{
  final boolean changed;
  final Hints hints;
synchronized (GLOBAL) {
    changed=ensureSystemDefaultLoaded();
    if (strict) {
      hints=new StrictHints(GLOBAL);
    }
 else {
      hints=new Hints(GLOBAL);
    }
  }
  if (changed) {
    GeoTools.fireConfigurationChanged();
  }
  return hints;
}
