{
  int n=points.size();
  ArrayList<Point2D> pointList=new ArrayList<Point2D>(n);
  for (int i=1; i < n; ++i) {
    Point2D p0=points.get(i - 1);
    Point2D p1=points.get(i);
    pointList.add(p0);
    Point2D sp[]=split(p0,p1,maxLength);
    if (sp != null) {
      for (int j=0; j < sp.length; ++j) {
        pointList.add(sp[j]);
      }
    }
  }
  pointList.add(points.get(n - 1));
  return pointList;
}
