{
  Utilities.ensureNonNull("inStream",inStream);
  Utilities.ensureNonNull("reader",reader);
  if (imageIndex < 0)   throw new IllegalArgumentException(Errors.format(ErrorKeys.INDEX_OUT_OF_BOUNDS_$1,imageIndex));
  inStream.reset();
  reader.setInput(inStream);
  return new Rectangle(0,0,reader.getWidth(imageIndex),reader.getHeight(imageIndex));
}
