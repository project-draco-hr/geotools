{
  FeatureIterator<? extends Feature> i=collection.features();
  try {
    ReferencedEnvelope bounds=new ReferencedEnvelope(collection.getSchema().getCoordinateReferenceSystem());
    if (!i.hasNext()) {
      bounds.setToNull();
      return bounds;
    }
    bounds.init(((SimpleFeature)i.next()).getBounds());
    return bounds;
  }
  finally {
    i.close();
  }
}
