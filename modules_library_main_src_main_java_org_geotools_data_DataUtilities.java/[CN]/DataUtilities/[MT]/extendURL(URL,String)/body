{
  if (base == null)   throw new NullPointerException(Errors.format(ErrorKeys.NULL_ARGUMENT_$1,"base"));
  if (extension == null)   throw new NullPointerException(Errors.format(ErrorKeys.NULL_ARGUMENT_$1,"extension"));
  String a=base.toExternalForm();
  if (!a.endsWith("/"))   a+="/";
  a+=extension;
  return new URL(a);
}
