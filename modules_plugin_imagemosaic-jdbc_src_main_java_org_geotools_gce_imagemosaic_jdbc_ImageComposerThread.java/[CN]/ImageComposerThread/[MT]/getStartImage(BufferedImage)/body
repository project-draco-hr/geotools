{
  Dimension dim=getStartDimension();
  int imageType=copyFrom.getType();
  if (imageType == BufferedImage.TYPE_CUSTOM)   imageType=ImageMosaicJDBCReader.DEFAULT_IMAGE_TYPE;
  BufferedImage image=null;
  if ((imageType == BufferedImage.TYPE_BYTE_BINARY || imageType == BufferedImage.TYPE_BYTE_INDEXED) && (copyFrom.getColorModel() instanceof IndexColorModel))   image=new BufferedImage((int)dim.getWidth(),(int)dim.getHeight(),imageType,(IndexColorModel)copyFrom.getColorModel());
 else   image=new BufferedImage((int)dim.getWidth(),(int)dim.getHeight(),imageType);
  Graphics2D g2D=(Graphics2D)image.getGraphics();
  Color save=g2D.getColor();
  g2D.setColor(backgroundColor);
  g2D.fillRect(0,0,image.getWidth(),image.getHeight());
  g2D.setColor(save);
  return image;
}
