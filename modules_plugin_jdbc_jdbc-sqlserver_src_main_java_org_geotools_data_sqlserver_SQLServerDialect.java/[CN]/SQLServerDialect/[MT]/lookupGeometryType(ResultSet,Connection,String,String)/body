{
  String tableName=columnMetaData.getString("TABLE_NAME");
  String columnName=columnMetaData.getString("COLUMN_NAME");
  Statement statement=null;
  ResultSet result=null;
  try {
    String schema=dataStore.getDatabaseSchema();
    String sqlStatement="SELECT TYPE FROM " + gTableName + " WHERE "+ (schema == null ? "" : "F_TABLE_SCHEMA = '" + dataStore.getDatabaseSchema() + "' AND ")+ "F_TABLE_NAME = '"+ tableName+ "' "+ "AND "+ gColumnName+ " = '"+ columnName+ "'";
    LOGGER.log(Level.FINE,"Geometry type check; {0} ",sqlStatement);
    statement=cx.createStatement();
    result=statement.executeQuery(sqlStatement);
    if (result.next()) {
      return result.getString(1);
    }
  }
 catch (  SQLException e) {
    return null;
  }
 finally {
    dataStore.closeSafe(result);
    dataStore.closeSafe(statement);
  }
  return null;
}
