{
  if (dimension < 2) {
    throw new IllegalArgumentException(Errors.format(ErrorKeys.ILLEGAL_ARGUMENT_$2,"dimension",dimension));
  }
  index=new int[dimension * 2];
  index[0]=x;
  index[1]=y;
  index[dimension + 0]=x + width;
  index[dimension + 1]=y + height;
  Arrays.fill(index,dimension + 2,index.length,1);
  checkCoherence();
}
