{
  Runnable runner=new Runnable(){
    public void run(){
      StringBuilder sb=new StringBuilder();
      sb.append(textArea.getText());
      sb.append("\n");
      sb.append(text);
      textArea.setText(sb.toString());
      textArea.setSelection(textArea.getCharCount());
    }
  }
;
  Utils.runGuiRunnableSafe(runner,true);
}
