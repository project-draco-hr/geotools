{
  Writer writer=null;
  try {
    File file=getFile();
    if (file != null) {
      writer=new BufferedWriter(new FileWriter(file));
      writer.write(textArea.getText());
    }
  }
 catch (  IOException ex) {
    throw new IllegalStateException(ex);
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException ex) {
      }
    }
  }
}
