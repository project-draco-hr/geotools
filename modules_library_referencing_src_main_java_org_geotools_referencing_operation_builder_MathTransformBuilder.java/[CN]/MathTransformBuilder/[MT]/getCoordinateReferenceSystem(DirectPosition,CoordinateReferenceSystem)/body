{
  final CoordinateReferenceSystem candidate=point.getCoordinateReferenceSystem();
  if (candidate != null) {
    if (previousCRS == null) {
      return candidate;
    }
    if (!previousCRS.equals(candidate)) {
      throw new MismatchedReferenceSystemException(Errors.format(ErrorKeys.MISMATCHED_COORDINATE_REFERENCE_SYSTEM));
    }
  }
  return previousCRS;
}
