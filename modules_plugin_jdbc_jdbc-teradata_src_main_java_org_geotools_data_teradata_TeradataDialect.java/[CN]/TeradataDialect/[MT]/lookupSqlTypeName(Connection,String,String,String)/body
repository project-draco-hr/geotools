{
  ResultSet columns=null;
  try {
    DatabaseMetaData metaData=cx.getMetaData();
    columns=metaData.getColumns(null,dataStore.escapeNamePattern(metaData,schemaName),dataStore.escapeNamePattern(metaData,tableName),dataStore.escapeNamePattern(metaData,columnName));
    columns.next();
    return columns.getString("TYPE_NAME");
  }
  finally {
    columns.close();
  }
}
