{
  StringBuffer errors=new StringBuffer();
  Exception bad=null;
  for (int i=0, ii=files.length; i < ii; i++) {
    try {
      test(files[i]);
      break;
    }
 catch (    Exception e) {
      e.printStackTrace();
      errors.append("\nFile " + files[i] + " : "+ e.getMessage());
      bad=e;
    }
  }
  if (errors.length() > 0) {
    fail(errors.toString(),bad);
  }
}
