{
  final Renderer renderer=getRenderer();
  if (renderer != null) {
    final float height=renderer.getHeight();
    final float width=renderer.getWidth();
    float aspectRatio=1;
    if (height > 0) {
      aspectRatio=width / height;
    }
    final Camera camera=getCamera();
    camera.setFrustumPerspective(DEFAULT_FIELD_OF_VIEW_DEGREES,aspectRatio,camera.getFrustumNear(),camera.getFrustumFar());
  }
}
