{
  this.store.clear();
  this.root=findUniqueInstance(new RegionNodeIdentifier(this.mbr));
  GridRootNode root=new GridRootNode(gridsize,(RegionNodeIdentifier)this.root);
  root.split(this);
  writeNode(root);
  this.stats.reset();
  this.stats.addToNodesCounter(root.getCapacity() + 1);
  this.flush();
}
