{
  for (int i=1; i < argv.length; i++) {
    String paramName=null;
switch (i) {
case 1:
      paramName="Shape file";
    break;
case 2:
  paramName="Target directory";
break;
case 3:
paramName="Distances";
break;
default :
paramName="?????";
}
System.out.printf("%-20s\t%s\n",new Object[]{paramName,argv[i]});
}
}
