{
  if (srcPts != dstPts || srcOff >= dstOff) {
    while (--numPts >= 0) {
      dstPts[dstOff++]=scale * Math.pow(base,srcPts[srcOff++]);
    }
  }
 else {
    srcOff+=numPts;
    dstOff+=numPts;
    while (--numPts >= 0) {
      dstPts[--dstOff]=scale * Math.pow(base,srcPts[--srcOff]);
    }
  }
}
