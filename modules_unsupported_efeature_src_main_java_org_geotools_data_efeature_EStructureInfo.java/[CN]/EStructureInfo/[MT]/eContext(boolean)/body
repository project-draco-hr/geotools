{
  verify(checkIsValid);
  if (eContext == null || eContext.get() == null) {
    eContext=new WeakReference<EFeatureContext>(eFactory(false).eContext(eContextID));
    if (eContext.get() == null) {
      invalidate(true);
      throw new IllegalStateException("EFeatureContext '" + eContextID + "' not found");
    }
  }
  return eContext.get();
}
