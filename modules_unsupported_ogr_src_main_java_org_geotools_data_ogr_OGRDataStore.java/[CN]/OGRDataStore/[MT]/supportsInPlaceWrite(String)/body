{
  DataSource ds=ogr.OpenShared(ogrSourceName,TRUE);
  if (ds == null)   return false;
  Layer l=getOGRLayer(ds,typeName);
  boolean retval=l.TestCapability(ogr.OLCDeleteFeature) && l.TestCapability(ogr.OLCRandomWrite) && l.TestCapability(ogr.OLCSequentialWrite);
  l.delete();
  ds.delete();
  return retval;
}
