{
  Object[] array=roads.toArray();
  roads.purge();
  assertEquals(roads.size(),array.length);
  Iterator i=roads.iterator();
  assertTrue(i.hasNext());
  roads.close(i);
  try {
    assertFalse(i.hasNext());
    fail("should be closed");
  }
 catch (  IllegalStateException closed) {
  }
  i=roads.iterator();
  assertTrue(i.hasNext());
  roads.purge();
  try {
    assertFalse(i.hasNext());
    fail("should be closed");
  }
 catch (  IllegalStateException closed) {
  }
}
