{
  InputStream in=null;
  OutputStream out=null;
  try {
    in=new FileInputStream(src);
    out=new FileOutputStream(dst,false);
    byte[] buf=new byte[1024];
    int len;
    while ((len=in.read(buf)) > 0) {
      out.write(buf,0,len);
    }
  }
  finally {
    if (in != null) {
      in.close();
    }
    if (out != null) {
      out.close();
    }
  }
}
