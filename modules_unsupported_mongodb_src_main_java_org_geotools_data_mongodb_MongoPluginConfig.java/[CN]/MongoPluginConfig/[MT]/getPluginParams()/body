{
  if (mongoParams == null) {
    mongoParams=new ArrayList<Param>();
    mongoParams.add(new Param(NAMESPACE_PARAM,String.class,"Namespace associated with this data store",false));
    mongoParams.add(new Param(MONGO_HOST_PARAM,String.class,"MongoDB Server",true,"localhost"));
    mongoParams.add(new Param(MONGO_PORT_PARAM,Integer.class,"MongoDB Port",true,Integer.valueOf(27017)));
    mongoParams.add(new Param(MONGO_DB_NAME_PARAM,String.class,"MongoDB Database",true,"db"));
  }
  return mongoParams;
}
