{
  curr++;
  if ((curr * 2 + 1) >= ordinates.length) {
    int newSize=ordinates.length * 3 / 2;
    if (newSize < 10) {
      newSize=10;
    }
    double[] resized=new double[newSize];
    System.arraycopy(ordinates,0,resized,0,ordinates.length);
    ordinates=resized;
  }
  ordinates[curr * 2]=x;
  ordinates[curr * 2 + 1]=y;
}
