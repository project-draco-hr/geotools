{
  Map<String,String> params=new HashMap<String,String>();
  params.put(DB2DataStoreFactory.DBTYPE.key,"DB2");
  params.put(DB2DataStoreFactory.HOST.key,fixture.getProperty("host"));
  params.put(DB2DataStoreFactory.PORT.key,fixture.getProperty("portnum"));
  params.put(DB2DataStoreFactory.TABSCHEMA.key,fixture.getProperty("tabschema"));
  params.put(DB2DataStoreFactory.DATABASE.key,fixture.getProperty("dbname"));
  params.put(DB2DataStoreFactory.USER.key,fixture.getProperty("user"));
  params.put(DB2DataStoreFactory.PASSWD.key,fixture.getProperty("password"));
  return params;
}
