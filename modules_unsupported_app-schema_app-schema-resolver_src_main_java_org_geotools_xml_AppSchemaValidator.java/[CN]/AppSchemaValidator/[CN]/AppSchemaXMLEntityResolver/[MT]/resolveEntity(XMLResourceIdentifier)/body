{
  if (resourceIdentifier.getLiteralSystemId() == null) {
    throw new RuntimeException("Schema validation failure caused by " + "missing schemaLocation for namespace " + resourceIdentifier.getNamespace());
  }
 else {
    return new XMLInputSource(resourceIdentifier.getPublicId(),resolver.resolve(resourceIdentifier.getLiteralSystemId(),resourceIdentifier.getBaseSystemId()),resourceIdentifier.getBaseSystemId());
  }
}
