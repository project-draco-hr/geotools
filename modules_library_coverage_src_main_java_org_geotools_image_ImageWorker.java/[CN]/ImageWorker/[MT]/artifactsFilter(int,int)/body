{
  ParameterBlock pb=new ParameterBlock();
  pb.setSource(image,0);
  pb.set(roi,0);
  pb.set(background,1);
  pb.set(threshold,2);
  pb.set(filterSize,3);
  pb.set(nodata,4);
  if (isNoDataNeeded()) {
    if (background != null && background.length > 0) {
      double dest=background[0];
      setNoData(RangeFactory.create(dest,dest));
    }
  }
  invalidateStatistics();
  return this;
}
