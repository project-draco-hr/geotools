{
  ParameterBlock pb=new ParameterBlock();
  pb.addSource(image);
  pb.add(leftPad);
  pb.add(rightPad);
  pb.add(topPad);
  pb.add(bottomPad);
  pb.add(ext);
  pb.add(nodata);
  if (isNoDataNeeded()) {
    if (background != null && background.length > 0) {
      pb.add(background);
      setNoData(RangeFactory.create(background[0],background[0]));
    }
  }
  image=JAI.create("Border",pb,getRenderingHints());
  return this;
}
