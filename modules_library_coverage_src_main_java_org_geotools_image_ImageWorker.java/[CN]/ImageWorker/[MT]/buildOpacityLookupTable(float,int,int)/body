{
  byte[][] matrix=new byte[bands][256];
  for (int band=0; band < matrix.length; band++) {
    if (band == alphaBand) {
      for (int i=0; i < 256; i++) {
        matrix[band][i]=(byte)Math.round(i * opacity);
      }
    }
 else {
      for (int i=0; i < 256; i++) {
        matrix[band][i]=(byte)i;
      }
    }
  }
  LookupTableJAI table=new LookupTableJAI(matrix);
  return table;
}
