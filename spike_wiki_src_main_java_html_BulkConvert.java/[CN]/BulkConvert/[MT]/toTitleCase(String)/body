{
  StringBuilder title=new StringBuilder();
  boolean next=true;
  for (  char c : heading.toCharArray()) {
    if (Character.isSpaceChar(c)) {
      next=true;
    }
 else     if (next) {
      c=Character.toTitleCase(c);
      next=false;
    }
    title.append(c);
  }
  return title.toString();
}
