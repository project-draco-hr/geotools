{
  if (clr == null)   return defclr;
  if (clr.startsWith("#")) {
    try {
      return Color.decode(clr);
    }
 catch (    NumberFormatException nfe) {
      return defclr;
    }
  }
 else {
    for (int i=0; i < COLORS.length; i++) {
      if (COLORS[i].equalsIgnoreCase(clr)) {
        int[] iclr=COLORS_RGB[i];
        return new Color(iclr[0],iclr[1],iclr[2]);
      }
    }
  }
  return defclr;
}
