{
  if (language == null) {
    language="";
  }
  if (country == null) {
    country="";
  }
  Locale l=new Locale(language,country);
  if (!supportedLocales.contains(l)) {
    LOGGER.log(Level.WARNING,"{0} is not currently supported by the gt-swing module",l);
    return;
  }
  currentLocale=l;
  if (bundles != null) {
    bundles.clear();
  }
}
