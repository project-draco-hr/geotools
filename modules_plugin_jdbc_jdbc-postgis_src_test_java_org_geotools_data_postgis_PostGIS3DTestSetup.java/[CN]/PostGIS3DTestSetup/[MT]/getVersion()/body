{
  if (version == null) {
    Connection conn=null;
    Statement st=null;
    ResultSet rs=null;
    try {
      conn=getDataSource().getConnection();
      st=conn.createStatement();
      rs=st.executeQuery("select PostGIS_Lib_Version()");
      if (rs.next()) {
        version=new Version(rs.getString(1));
      }
    }
  finally {
      conn.close();
      st.close();
      rs.close();
    }
  }
  return version;
}
