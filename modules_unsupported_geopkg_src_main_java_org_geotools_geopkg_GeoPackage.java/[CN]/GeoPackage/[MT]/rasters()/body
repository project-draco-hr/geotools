{
  try {
    Connection cx=connPool.getConnection();
    try {
      String sql=format("SELECT a.*, b.r_raster_column, b.compr_qual_factor, b.georectification, c.auth_srid, c.srtext" + " FROM %s a, %s b, %s c" + " WHERE a.table_name = b.r_table_name"+ " AND a.srid = c.srid "+ " AND a.data_type = ?",GEOPACKAGE_CONTENTS,RASTER_COLUMNS,SPATIAL_REF_SYS);
      PreparedStatement ps=cx.prepareStatement(sql);
      ps.setString(1,DataType.Raster.value());
      ResultSet rs=ps.executeQuery();
      List<RasterEntry> entries=new ArrayList();
      while (rs.next()) {
        entries.add(createRasterEntry(rs));
      }
      rs.close();
      ps.close();
      return entries;
    }
  finally {
      cx.close();
    }
  }
 catch (  SQLException e) {
    throw new IOException(e);
  }
}
