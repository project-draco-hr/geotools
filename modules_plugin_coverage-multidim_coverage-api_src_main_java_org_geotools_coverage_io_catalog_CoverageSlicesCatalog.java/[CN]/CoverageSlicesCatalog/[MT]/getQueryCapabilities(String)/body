{
  final Lock lock=rwLock.readLock();
  try {
    lock.lock();
    checkStore();
    return slicesIndexStore.getFeatureSource(typeName).getQueryCapabilities();
  }
 catch (  IOException e) {
    if (LOGGER.isLoggable(Level.INFO))     LOGGER.log(Level.INFO,"Unable to collect QueryCapabilities",e);
    return null;
  }
 finally {
    lock.unlock();
  }
}
