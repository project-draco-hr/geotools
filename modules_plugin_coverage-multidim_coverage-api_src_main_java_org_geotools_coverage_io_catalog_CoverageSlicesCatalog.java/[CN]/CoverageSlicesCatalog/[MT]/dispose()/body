{
  final Lock l=rwLock.writeLock();
  try {
    l.lock();
    try {
      if (slicesIndexStore != null)       slicesIndexStore.dispose();
    }
 catch (    Throwable e) {
      if (LOGGER.isLoggable(Level.FINE))       LOGGER.log(Level.FINE,e.getLocalizedMessage(),e);
    }
 finally {
      slicesIndexStore=null;
    }
  }
  finally {
    l.unlock();
  }
}
