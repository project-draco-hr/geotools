{
  Connection cx=null;
  Statement st=null;
  ResultSet rs=null;
  try {
    cx=getDataSource().getConnection();
    st=cx.createStatement();
    rs=st.executeQuery("select PostGIS_Lib_Version()");
    if (rs.next()) {
      return new Version(rs.getString(1)).compareTo(new Version("1.5.0")) >= 0;
    }
 else {
      return true;
    }
  }
  finally {
    rs.close();
    st.close();
    cx.close();
  }
}
