{
  return new AbstractList<Layer>(){
    @Override public Layer get(    int index){
      return children.get(index);
    }
    @Override public int size(){
      return children.size();
    }
    @Override public Layer set(    int index,    Layer element){
      Layer replaced=children.set(index,element);
      replaced.parent=null;
      element.parent=Layer.this;
      return replaced;
    }
    @Override public void add(    int index,    Layer element){
      children.add(index,element);
      element.parent=Layer.this;
    }
    @Override public Layer remove(    int index){
      Layer removed=children.remove(index);
      if (removed != null) {
        removed.parent=null;
      }
      return removed;
    }
  }
;
}
