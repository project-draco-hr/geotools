{
  Envelope envelope=(Envelope)factory.createConverter(Geometry.class,Envelope.class,null).convert(new GeometryFactory().createPolygon(new GeometryFactory().createLinearRing(new Coordinate[]{new Coordinate(0,0),new Coordinate(1,0),new Coordinate(1,1),new Coordinate(0,1),new Coordinate(0,0)}),null),Envelope.class);
  assertEquals(new Envelope(new Coordinate(0,0),new Coordinate(1,1)),envelope);
}
