{
  Geometry geometry=(Geometry)factory.createConverter(String.class,Geometry.class,null).convert("POLYGON((0 0, 1 0, 1 1, 0 1, 0 0))",Geometry.class);
  assertNotNull(geometry);
  assertTrue(new GeometryFactory().createPolygon(new GeometryFactory().createLinearRing(new Coordinate[]{new Coordinate(0,0),new Coordinate(1,0),new Coordinate(1,1),new Coordinate(0,1),new Coordinate(0,0)}),null).equals(geometry));
}
