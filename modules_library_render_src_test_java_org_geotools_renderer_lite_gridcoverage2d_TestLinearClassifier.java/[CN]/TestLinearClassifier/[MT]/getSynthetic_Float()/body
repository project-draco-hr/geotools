{
  final int width=500;
  final int height=500;
  final WritableRaster raster=RasterFactory.createBandedRaster(DataBuffer.TYPE_FLOAT,width,height,1,null);
  for (int y=0; y < height; y++) {
    for (int x=0; x < width; x++) {
      raster.setSample(x,y,0,(x + y));
    }
  }
  final ColorModel cm=new ComponentColorModelJAI(ColorSpace.getInstance(ColorSpace.CS_GRAY),false,false,Transparency.OPAQUE,DataBuffer.TYPE_FLOAT);
  final BufferedImage image=new BufferedImage(cm,raster,false,null);
  return image;
}
