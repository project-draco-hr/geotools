{
  MapProjection mapProjection=CRS.getMapProjection(renderingEnvelope.getCoordinateReferenceSystem());
  if (renderingEnvelope != null && mapProjection instanceof TransverseMercator) {
    double centralMeridian=mapProjection.getParameterValues().parameter(AbstractProvider.CENTRAL_MERIDIAN.getName().getCode()).doubleValue();
    ReferencedEnvelope validArea=new ReferencedEnvelope(centralMeridian - 45,centralMeridian + 45,-90,90,DefaultGeographicCRS.WGS84);
    return new ProjectionHandler(renderingEnvelope,validArea);
  }
  return null;
}
