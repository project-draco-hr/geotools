{
  if (name == null || (name=name.trim()).length() == 0) {
    name=DIRECTORY;
  }
 else {
    name=DIRECTORY + '/' + name;
  }
  if (caller != null) {
    final Class c=(caller instanceof Class) ? (Class)caller : caller.getClass();
    return c.getResource(name);
  }
 else {
    return Thread.currentThread().getContextClassLoader().getResource(name);
  }
}
