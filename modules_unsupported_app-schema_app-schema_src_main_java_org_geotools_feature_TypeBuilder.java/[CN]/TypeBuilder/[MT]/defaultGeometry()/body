{
  if (defaultGeom != null) {
    for (    PropertyDescriptor pd : properties) {
      if (pd.getName().equals(defaultGeom)) {
        return (GeometryDescriptor)pd;
      }
    }
  }
  for (  PropertyDescriptor pd : properties) {
    if (pd instanceof GeometryDescriptor) {
      return (GeometryDescriptor)pd;
    }
  }
  return null;
}
