{
  for (int i=0; i < 2; i++) {
    if (!isNull(i)) {
      int minDepth=depth[i][1];
      if (depth[i][2] < minDepth)       minDepth=depth[i][2];
      if (minDepth < 0)       minDepth=0;
      for (int j=1; j < 3; j++) {
        int newValue=0;
        if (depth[i][j] > minDepth)         newValue=1;
        depth[i][j]=newValue;
      }
    }
  }
}
