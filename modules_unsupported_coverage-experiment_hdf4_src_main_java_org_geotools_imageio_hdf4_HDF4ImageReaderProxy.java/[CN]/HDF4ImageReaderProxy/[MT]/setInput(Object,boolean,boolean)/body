{
  if (wrappee != null)   reset();
  try {
    final NetcdfDataset dataset=NetCDFUtilities.getDataset(input);
    if (dataset != null) {
      if (!(dataset.getIosp() instanceof H4iosp))       throw new IllegalArgumentException("Provided dataset is not an HDF4 file");
    }
 else     throw new IllegalArgumentException("Provided dataset is not an HDF4 file");
    wrappee.setInput(input,seekForwardOnly,ignoreMetadata);
    wrappee.initialize();
  }
 catch (  IOException e) {
    throw new IllegalArgumentException("Not a Valid Input",e);
  }
}
