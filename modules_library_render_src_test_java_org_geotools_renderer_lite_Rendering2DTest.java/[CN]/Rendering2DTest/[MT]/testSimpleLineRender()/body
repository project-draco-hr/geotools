{
  final SimpleFeatureCollection ft=createTestFeatureCollection(DefaultGeographicCRS.WGS84,LINE);
  final Style style=createTestStyle();
  final MapContext map=new DefaultMapContext(DefaultGeographicCRS.WGS84);
  map.addLayer(ft,style);
  map.setAreaOfInterest(map.getLayerBounds());
  final StreamingRenderer renderer=new StreamingRenderer();
  renderer.setContext(map);
  renderer.setRendererHints(rendererHints);
  ReferencedEnvelope env=map.getLayerBounds();
  env=new ReferencedEnvelope(env.getMinX() - 20,env.getMaxX() + 20,env.getMinY() - 20,env.getMaxY() + 20,map.getCoordinateReferenceSystem());
  RendererBaseTest.showRender("testSimpleLineRender",renderer,1000,env);
}
