{
  final String type=Classes.getShortClassName(exception);
  String message=exception.getLocalizedMessage();
  if (message == null) {
    message=Vocabulary.format(VocabularyKeys.NO_DETAILS_$1,type);
  }
 else {
    err.print(type);
    err.print(": ");
  }
  err.println(message);
  err.flush();
}
