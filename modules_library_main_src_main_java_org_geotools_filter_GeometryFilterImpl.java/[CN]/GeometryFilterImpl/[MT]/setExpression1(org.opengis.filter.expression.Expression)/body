{
  if (expression instanceof Expression) {
    Expression leftGeometry=(Expression)expression;
    if (DefaultExpression.isGeometryExpression(leftGeometry.getType()) || permissiveConstruction) {
      super.setExpression1(leftGeometry);
    }
 else {
      throw new IllegalFilterException("Attempted to add (left)" + " non-geometry expression" + " to geometry filter.");
    }
  }
 else {
    super.setExpression1(expression);
  }
}
