{
  if (expression instanceof Expression) {
    Expression rightGeometry=(Expression)expression;
    if (DefaultExpression.isGeometryExpression(rightGeometry.getType()) || permissiveConstruction) {
      super.setExpression2(rightGeometry);
    }
 else {
      throw new IllegalFilterException("Attempted to add (right)" + " non-geometry" + "expression to geometry filter.");
    }
  }
 else {
    super.setExpression2(expression);
  }
}
