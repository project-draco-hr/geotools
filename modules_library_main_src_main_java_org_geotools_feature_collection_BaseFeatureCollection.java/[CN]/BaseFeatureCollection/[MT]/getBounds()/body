{
  ReferencedEnvelope bounds=null;
  SimpleFeatureIterator it=features();
  try {
    while (it.hasNext()) {
      SimpleFeature feature=it.next();
      BoundingBox bbox=feature.getBounds();
      if (bbox != null) {
        if (bounds == null) {
          bounds=new ReferencedEnvelope(bbox);
        }
 else {
          bounds.include(bbox);
        }
      }
    }
  }
  finally {
    it.close();
  }
  return bounds;
}
