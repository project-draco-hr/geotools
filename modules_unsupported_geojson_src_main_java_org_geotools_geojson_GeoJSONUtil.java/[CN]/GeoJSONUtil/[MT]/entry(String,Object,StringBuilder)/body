{
  string(key,sb).append(":");
  if (value instanceof Number || value instanceof Boolean || value instanceof Date) {
    literal(value,sb);
  }
 else {
    String str=Converters.convert(value,String.class);
    if (str == null) {
      str=value.toString();
    }
    string(str,sb);
  }
  return sb;
}
