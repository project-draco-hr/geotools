{
  if (shape != null) {
    Rectangle2D bounds=shape.getBounds2D();
    double shapeSize=bounds.getHeight();
    double scale=size / shapeSize;
    TransformedShape ts=new TransformedShape();
    ts.shape=shape;
    ts.translate(x,y);
    ts.rotate(rotation);
    ts.scale(scale,-scale);
    return ts;
  }
 else {
    return null;
  }
}
