{
  if (isEmpty()) {
    this.x=x;
    this.y=y;
    this.width=0;
    this.height=0;
  }
 else {
    if (x < getMinX()) {
      this.width=width + (getMinX() - x);
      this.x=x;
    }
    if (x > getMaxX()) {
      this.width=width + (x - getMaxX());
    }
    if (y < getMinY()) {
      this.height=height + (getMinY() - y);
      this.y=y;
    }
    if (y > getMaxY()) {
      this.height=height + (y - getMaxY());
    }
  }
}
