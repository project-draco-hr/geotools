{
  return new BaseMatcher<Double>(){
    @Override public boolean matches(    Object arg0){
      return Math.abs(value / (Double)arg0 - 1) <= epsilon;
    }
    @Override public void describeTo(    Description arg0){
      arg0.appendText("divided by ").appendValue(value).appendText(" within ").appendValue(epsilon).appendText(" of 1.");
    }
  }
;
}
