{
  String expectedTable="Pr??nom      Nom    " + LINE_SEPARATOR + "-------------------"+ LINE_SEPARATOR+ "Id??phonse   Laporte"+ LINE_SEPARATOR+ "Sarah       Coursi "+ LINE_SEPARATOR+ "Yvan        Dubois "+ LINE_SEPARATOR;
  StringWriter writer=new StringWriter();
  TableWriter out=new TableWriter(writer,3);
  out.write("Pr??nom\tNom" + LINE_SEPARATOR);
  out.nextLine('-');
  out.write("Id??phonse\tLaporte" + LINE_SEPARATOR + "Sarah\tCoursi"+ LINE_SEPARATOR+ "Yvan\tDubois");
  out.flush();
  out.close();
  assertEquals(expectedTable,writer.toString());
}
