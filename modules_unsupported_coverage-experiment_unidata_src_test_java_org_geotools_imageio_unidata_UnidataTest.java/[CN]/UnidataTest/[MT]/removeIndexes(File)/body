{
  if (file.isFile()) {
    final String absolutePath=file.getAbsolutePath().toLowerCase();
    if (absolutePath.endsWith(".idx") || absolutePath.endsWith(".db")) {
      file.delete();
    }
  }
 else {
    final File[] files=file.listFiles();
    for (    File f : files) {
      removeIndexes(f);
    }
  }
}
