{
  if (at == null) {
    at=NO_TRANSFORM;
  }
  this.at=at;
  coordinates=ls.getCoordinateSequence();
  coordinateCount=coordinates.size();
  isClosed=ls instanceof LinearRing;
  this.generalize=generalize;
  this.maxDistance=maxDistance;
  done=false;
  currentCoord=0;
  oldX=Float.NaN;
  oldY=Float.NaN;
}
