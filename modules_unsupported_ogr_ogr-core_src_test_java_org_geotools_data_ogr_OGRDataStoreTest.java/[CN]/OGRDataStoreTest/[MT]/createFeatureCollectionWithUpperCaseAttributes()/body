{
  SimpleFeatureTypeBuilder tbuilder=new SimpleFeatureTypeBuilder();
  tbuilder.setName("points");
  tbuilder.add("geom",Point.class);
  tbuilder.add("NAME",String.class);
  SimpleFeatureType type=tbuilder.buildFeatureType();
  SimpleFeatureBuilder fb=new SimpleFeatureBuilder(type);
  ListFeatureCollection features=new ListFeatureCollection(type);
  for (int i=0, ii=20; i < ii; i++) {
    features.add(fb.buildFeature(null,new Object[]{new GeometryFactory().createPoint(new Coordinate(1,-1)),"Point" + String.valueOf(i)}));
  }
  return features;
}
