{
  final JPanel panel=new JPanel(new MigLayout("insets 0"));
  panel.add(field=new JTextField(32),"width 200::700, growx");
  panel.add(browse=new JButton("Browse"),"wrap");
  browse.addActionListener(new ActionListener(){
