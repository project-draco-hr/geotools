{
  long zoom=0;
  Connection cx=connPool.getConnection();
  try {
    Statement st=cx.createStatement();
    ResultSet rs=st.executeQuery("SELECT MIN(zoom_level) FROM " + TABLE_TILES);
    if (rs.next()) {
      zoom=rs.getLong(1);
    }
    rs.close();
    st.close();
  }
  finally {
    cx.close();
  }
  return zoom;
}
