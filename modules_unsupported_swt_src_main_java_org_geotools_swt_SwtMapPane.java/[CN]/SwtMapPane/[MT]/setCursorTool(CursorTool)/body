{
  if (tool == null) {
    toolManager.setNoCursorTool();
    this.setCursor(CursorManager.getInstance().getArrowCursor());
    toolCanDraw=false;
    toolCanMove=false;
  }
 else {
    this.setCursor(tool.getCursor());
    toolManager.setCursorTool(tool);
    toolCanDraw=tool.canDraw();
    toolCanMove=tool.canMove();
  }
}
