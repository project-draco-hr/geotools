{
  if (content != null && content.layers().size() > 0) {
    try {
      fullExtent=content.getMaxBounds();
      if (fullExtent == null) {
        fullExtent=worldEnvelope();
      }
    }
 catch (    Exception ex) {
      throw new IllegalStateException(ex);
    }
  }
 else {
    fullExtent=null;
  }
}
