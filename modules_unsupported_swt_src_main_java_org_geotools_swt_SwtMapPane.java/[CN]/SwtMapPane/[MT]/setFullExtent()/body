{
  if (context != null && context.getLayerCount() > 0) {
    try {
      fullExtent=context.getLayerBounds();
      if (fullExtent == null) {
        fullExtent=worldEnvelope();
      }
    }
 catch (    Exception ex) {
      throw new IllegalStateException(ex);
    }
  }
 else {
    fullExtent=null;
  }
}
