{
  if (overlayImage != null) {
    Image tmpImage=new Image(getDisplay(),curPaintArea.width,curPaintArea.height);
    GC tmpGc=new GC(tmpImage);
    tmpGc.drawImage(swtImage,imageOrigin.x,imageOrigin.y);
    doOverlayImage(tmpGc);
    if (gc != null && !gc.isDisposed() && swtImage != null)     gc.drawImage(tmpImage,imageOrigin.x,imageOrigin.y);
  }
 else {
    if (gc != null && !gc.isDisposed() && swtImage != null)     gc.drawImage(swtImage,imageOrigin.x,imageOrigin.y);
  }
}
