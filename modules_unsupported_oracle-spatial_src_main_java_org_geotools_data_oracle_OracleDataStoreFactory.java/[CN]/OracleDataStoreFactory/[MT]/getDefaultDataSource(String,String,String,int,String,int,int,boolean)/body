{
  String dbUrl=null;
  if (instance.startsWith("("))   dbUrl=JDBC_PATH + instance;
 else   if (instance.startsWith("/"))   dbUrl=JDBC_PATH + "//" + host+ ":"+ port+ instance;
 else   dbUrl=JDBC_PATH + host + ":"+ port+ ":"+ instance;
  return DataSourceUtil.buildDefaultDataSource(dbUrl,JDBC_DRIVER,user,passwd,maxActive,minIdle,validate ? "select sysdate from dual" : null,false,0);
}
