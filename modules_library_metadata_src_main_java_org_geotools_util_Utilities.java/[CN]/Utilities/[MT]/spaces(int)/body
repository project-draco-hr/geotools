{
  if (length < 0) {
    length=0;
  }
  String s;
  if (length < spaces.length) {
    s=spaces[length];
    if (s == null) {
      s=spaces[spaces.length - 1].substring(0,length).intern();
      spaces[length]=s;
    }
  }
 else {
    char[] blancs=new char[length];
    Arrays.fill(blancs,' ');
    s=new String(blancs);
  }
  return s;
}
