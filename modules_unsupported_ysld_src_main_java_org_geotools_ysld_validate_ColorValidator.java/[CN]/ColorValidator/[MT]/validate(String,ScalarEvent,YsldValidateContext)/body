{
  try {
    Expression expr=Util.color(value,context.factory);
    if (expr instanceof Literal) {
      Color col=expr.evaluate(null,Color.class);
      if (col == null) {
        return "Invalid color, must be one of: '#RRGGBB', rgb(r,g,b), or expression";
      }
    }
    return null;
  }
 catch (  Exception e) {
    return e.getMessage();
  }
}
