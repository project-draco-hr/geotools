{
  if (schema instanceof SimpleFeatureType) {
    return (FeatureCollection<T,F>)new SortedSimpleFeatureCollection(DataUtilities.simple((FeatureCollection<SimpleFeatureType,SimpleFeature>)this),new SortBy[]{order});
  }
 else {
    throw new UnsupportedOperationException("Cannot sort on complex features at the moment");
  }
}
