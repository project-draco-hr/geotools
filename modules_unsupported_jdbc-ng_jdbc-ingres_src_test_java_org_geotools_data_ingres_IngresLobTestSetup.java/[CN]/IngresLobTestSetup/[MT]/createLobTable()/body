{
  Connection con=getDataSource().getConnection();
  con.prepareStatement("create table \"testlob\" (\"fid\" int primary key, " + "\"blob_field\" LONG BYTE, \"clob_field\" LONG VARCHAR)").execute();
  PreparedStatement ps=con.prepareStatement("INSERT INTO \"testlob\" (\"fid\",\"blob_field\",\"clob_field\")  VALUES (?,?,?)");
  ps.setInt(1,1);
  ps.setBytes(2,new byte[]{1,2,3,4,5});
  ps.setString(3,"small clob");
  ps.execute();
  ps.close();
  con.close();
}
