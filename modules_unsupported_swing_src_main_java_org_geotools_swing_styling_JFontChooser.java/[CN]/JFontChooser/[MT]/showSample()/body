{
  StringBuilder sb=new StringBuilder(families[familyIndex]);
  java.awt.Font f;
  if (weightIndex == 0) {
    if (styleIndex == 0) {
      sb.append("-PLAIN-");
    }
 else {
      sb.append("-ITALIC-");
    }
  }
 else {
    if (styleIndex == 0) {
      sb.append("-BOLD");
    }
 else {
      sb.append("-BOLDITALIC-");
    }
  }
  sb.append(sizes[sizeIndex]);
  java.awt.Font sampleFont=java.awt.Font.decode(sb.toString());
  textArea.setFont(sampleFont);
}
