{
  String allSdoSqlStatement="SELECT META.SDO_LAYER_GTYPE\n" + "FROM ALL_INDEXES INFO\n" + "INNER JOIN MDSYS.ALL_SDO_INDEX_METADATA META\n"+ "ON INFO.INDEX_NAME = META.SDO_INDEX_NAME\n"+ "WHERE INFO.TABLE_NAME = '" + tableName + "'\n"+ "AND REPLACE(meta.sdo_column_name, '\"') = '"+ columnName+ "'\n";
  if (schema != null && !"".equals(schema)) {
    allSdoSqlStatement+=" AND INFO.TABLE_OWNER = '" + schema + "'";
    allSdoSqlStatement+=" AND META.SDO_INDEX_OWNER = '" + schema + "'";
  }
  return readGeometryClassFromStatement(cx,allSdoSqlStatement);
}
