{
  if (geometryMetadataTable == null) {
    return null;
  }
  String metadataTableStatement="SELECT TYPE FROM " + geometryMetadataTable + " WHERE F_TABLE_NAME = '"+ tableName+ "'"+ " AND F_GEOMETRY_COLUMN = '"+ columnName+ "'";
  if (schema != null && !"".equals(schema)) {
    metadataTableStatement+=" AND F_TABLE_SCHEMA = '" + schema + "'";
  }
  return readGeometryClassFromStatement(cx,metadataTableStatement);
}
