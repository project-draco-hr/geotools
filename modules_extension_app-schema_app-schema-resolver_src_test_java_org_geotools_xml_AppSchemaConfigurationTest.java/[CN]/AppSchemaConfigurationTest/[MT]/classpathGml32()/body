{
  Configuration configuration=new AppSchemaConfiguration("http://www.opengis.net/gml/3.2","http://schemas.opengis.net/gml/3.2.1/gml.xsd",new SchemaResolver());
  SchemaIndex schemaIndex=null;
  try {
    schemaIndex=Schemas.findSchemas(configuration);
    Assert.assertNotNull(schemaIndex.getElementDeclaration(new QName("http://www.opengis.net/gml/3.2","AbstractFeature")));
  }
  finally {
    if (schemaIndex != null) {
      schemaIndex.destroy();
    }
  }
}
