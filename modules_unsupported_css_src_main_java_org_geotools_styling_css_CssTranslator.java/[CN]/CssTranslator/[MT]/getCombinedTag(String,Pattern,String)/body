{
  if (comment == null || comment.isEmpty()) {
    return null;
  }
  StringBuilder sb=new StringBuilder();
  for (  String line : comment.split("\n")) {
    Matcher matcher=p.matcher(line);
    if (matcher.matches()) {
      String text=matcher.group(1).trim();
      if (!text.isEmpty()) {
        if (sb.length() > 0) {
          sb.append(separator);
        }
        sb.append(text);
      }
    }
  }
  if (sb.length() > 0) {
    return sb.toString();
  }
 else {
    return null;
  }
}
