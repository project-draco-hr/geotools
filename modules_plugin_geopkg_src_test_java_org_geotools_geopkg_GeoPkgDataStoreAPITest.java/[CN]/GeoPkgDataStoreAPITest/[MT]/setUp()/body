{
  Map<String,Serializable> map=new HashMap<>();
  map.put(GeoPkgDataStoreFactory.DBTYPE.key,"geopkg");
  map.put(GeoPkgDataStoreFactory.DATABASE.key,"foo.gpkg");
  GeoPkgDataStoreFactory factory=new GeoPkgDataStoreFactory();
