{
  String xml="<kml>" + "<Schema name=\"foo\">" + "<SimpleField type=\"int\" name=\"quux\"></SimpleField>"+ "</Schema>"+ "<Placemark>"+ "<name>name</name>"+ "<description>description</description>"+ "<Point>"+ "<coordinates>1,2</coordinates>"+ "</Point>"+ "<ExtendedData>"+ "<SchemaData schemaUrl=\"#foo\">"+ "<SimpleData name=\"quux\">morx</SimpleData>"+ "</SchemaData>"+ "</ExtendedData>"+ "</Placemark></kml>";
  buildDocument(xml);
  SimpleFeature placemark=parsePlacemark();
  SimpleFeatureType featureType=placemark.getFeatureType();
  assertEquals(Integer.class,featureType.getDescriptor("quux").getType().getBinding());
  assertEquals("morx",placemark.getAttribute("quux"));
}
