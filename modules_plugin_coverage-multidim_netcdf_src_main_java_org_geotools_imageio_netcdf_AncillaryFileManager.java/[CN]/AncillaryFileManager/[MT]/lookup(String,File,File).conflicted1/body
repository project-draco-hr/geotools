{
  File file;
  String optionalAuxiliaryPath=parentDirectory.getAbsolutePath() + File.separator + baseName+ INDEX_SUFFIX;
  file=new File(optionalAuxiliaryPath);
  if (!file.exists() || !file.canRead()) {
    optionalAuxiliaryPath=parentDirectory.getAbsolutePath() + File.separator + "."+ baseName+ File.separator+ baseName+ INDEX_SUFFIX;
    file=new File(optionalAuxiliaryPath);
    if (!file.exists() || !file.canRead()) {
      file=null;
    }
  }
  if (file == null) {
    file=new File(destinationDirectory,baseName + INDEX_SUFFIX);
  }
  return file;
}
