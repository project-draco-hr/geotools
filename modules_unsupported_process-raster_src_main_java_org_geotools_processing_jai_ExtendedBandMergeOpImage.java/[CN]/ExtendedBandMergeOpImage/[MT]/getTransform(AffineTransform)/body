{
  if (tr.isIdentity() || Math.abs(tr.getScaleX() - 1) == 0 && Math.abs(tr.getScaleY() - 1) == 0 && Math.abs(tr.getShearX()) == 0 && Math.abs(tr.getShearY()) == 0 && Math.abs(tr.getTranslateX()) <= 1E-3 && Math.abs(tr.getTranslateY()) <= 1E-3) {
    return IDENTITY;
  }
 else   if (Math.abs(tr.getScaleX() - 1) == 0 && Math.abs(tr.getScaleY() - 1) == 0 && Math.abs(tr.getShearX()) == 0 && Math.abs(tr.getShearY()) == 0) {
    return TRANSLATION;
  }
 else {
    return AFFINE;
  }
}
