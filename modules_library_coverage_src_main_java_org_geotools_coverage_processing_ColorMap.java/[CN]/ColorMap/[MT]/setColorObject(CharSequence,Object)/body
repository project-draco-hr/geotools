{
  final String name=unlocalized(category);
  if (colors != null) {
    if (colorMap == null) {
      colorMap=new HashMap<String,Object>();
    }
    colorMap.put(name,colors);
  }
 else   if (colorMap != null) {
    colorMap.remove(name);
    if (colorMap.isEmpty()) {
      colorMap=null;
    }
  }
}
