{
  double dphi=abs(phi);
  int i=(int)floor(dphi * C1);
  if (i >= NODES) {
    i=NODES - 1;
  }
  dphi=toDegrees(dphi - RC1 * i);
  double x=X[i].forward(dphi) * FXC * lam;
  double y=Y[i].forward(dphi) * FYC;
  if (phi < 0d) {
    y=-y;
  }
  if (ptDst != null) {
    ptDst.setLocation(x,y);
    return ptDst;
  }
 else {
    return new Point2D.Double(x,y);
  }
}
