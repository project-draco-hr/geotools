 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("DROP TABLE " + f.schema + ".line3d CASCADE");
  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("CREATE TABLE " + f.schema + ".line3d (id int primary key)");
    s.execute("SELECT AddGeometryColumn('" + f.schema + "', 'line3d', 'geom', 4326, 'LINESTRING', 3);");
    s.execute("ALTER TABLE " + f.schema + ".line3d add name varchar;");
    s.execute("INSERT INTO " + f.schema + ".line3d (id,geom,name) VALUES (0,"+ "GeometryFromText('LINESTRING(1 1 0, 2 2 0, 4 2 1, 5 1 1)', 4326), 'l1')");
    s.execute("INSERT INTO " + f.schema + ".line3d (id,geom,name) VALUES (1,"+ "GeometryFromText('LINESTRING(3 0 1, 3 2 2, 3 3 3, 3 4 5)', 4326), 'l2')");
    s.execute("VACUUM ANALYZE " + f.schema + ".line3d");
  }
  finally {
    conn.close();
  }
