{
  LineNumberReader reader=null;
  try {
    reader=new LineNumberReader(new FileReader(file));
    while (reader.readLine() != null)     ;
    return reader.getLineNumber() - 1;
  }
 catch (  IOException e) {
    return -1;
  }
 finally {
    if (reader != null) {
      try {
        reader.close();
      }
 catch (      IOException e) {
      }
    }
  }
}
