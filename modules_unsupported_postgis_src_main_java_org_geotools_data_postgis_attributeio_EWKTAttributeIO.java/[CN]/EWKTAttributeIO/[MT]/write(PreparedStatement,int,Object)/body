{
  try {
    if (value == null) {
      ps.setNull(position,Types.VARCHAR);
    }
 else {
      Geometry g=(Geometry)value;
      String wkt=getWKTWriter().write(g);
      String ewkt="SRID=" + g.getSRID() + ";"+ wkt;
      ps.setString(position,ewkt);
    }
  }
 catch (  Exception e) {
    throw new DataSourceException("Sql writing problem",e);
  }
}
