{
  this.host=host;
  this.dbName=dbName;
  if (port != null) {
    try {
      this.port=Integer.parseInt(port);
    }
 catch (    NumberFormatException nfe) {
      throw new IllegalArgumentException("could not parse port " + "to an int value");
    }
  }
  connPath=DRIVER_PATH + "://" + host+ ":"+ port+ "/"+ dbName;
}
