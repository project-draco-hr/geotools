{
  if (connection == null) {
    connection=dataSource.getConnection();
  }
 else {
    if (!isConnectionValid(connection)) {
      statements.clear();
      try {
        connection.close();
      }
 catch (      Exception e) {
        LOGGER.log(Level.FINER,"Error occurred while closing an invalid connection",e);
      }
      connection=dataSource.getConnection();
    }
  }
  return connection;
}
