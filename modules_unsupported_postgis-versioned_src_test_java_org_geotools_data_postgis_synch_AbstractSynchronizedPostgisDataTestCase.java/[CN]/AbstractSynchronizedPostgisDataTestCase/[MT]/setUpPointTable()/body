  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("CREATE TABLE " + f.schema + ".point(fid varchar PRIMARY KEY, id int)");
    s.execute("SELECT AddGeometryColumn('" + f.schema + "', 'point', 'geom', 4326, 'POINT', 2);");
    s.execute("INSERT INTO " + f.schema + ".point (fid, id, geom) VALUES ("+ "'point1',1,"+ "GeometryFromText('POINT (0.0 0.0)',4326))");
  }
  finally {
    conn.close();
