{
  Connection conn=pool.getConnection();
  try {
    Statement s=conn.createStatement();
    s.execute("SELECT dropgeometrycolumn( '" + f.schema + "','empty','geom')");
  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("DROP TABLE " + f.schema + ".empty cascade");
  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("CREATE TABLE " + f.schema + ".empty(fid varchar PRIMARY KEY, id int)");
    s.execute("SELECT AddGeometryColumn('" + f.schema + "', 'empty', 'geom', -1, 'POINT', 2);");
  }
  finally {
    conn.close();
  }
}
