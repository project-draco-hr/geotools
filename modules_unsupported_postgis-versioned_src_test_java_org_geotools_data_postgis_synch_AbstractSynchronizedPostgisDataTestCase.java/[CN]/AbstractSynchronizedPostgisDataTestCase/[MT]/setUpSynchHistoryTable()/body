{
  Connection conn=pool.getConnection();
  conn.setAutoCommit(true);
  try {
    Statement s=conn.createStatement();
    s.execute("DROP TABLE " + f.schema + ".synch_history cascade");
  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("CREATE TABLE synch_history(" + "id SERIAL PRIMARY KEY, " + "table_name VARCHAR(256) NOT NULL, "+ "local_revision BIGINT NOT NULL, "+ "central_revision BIGINT, "+ "unique(table_name, local_revision, central_revision))");
  }
  finally {
    conn.close();
  }
}
