{
  Connection conn=pool.getConnection();
  conn.setAutoCommit(true);
  try {
    Statement s=conn.createStatement();
    s.execute("DROP TABLE " + f.schema + ".synch_conflicts cascade");
  }
 catch (  Exception ignore) {
  }
  try {
    Statement s=conn.createStatement();
    s.execute("CREATE TABLE synch_conflicts( " + "id SERIAL PRIMARY KEY, " + "table_name VARCHAR(256) NOT NULL, "+ "feature_id UUID NOT NULL, "+ "local_revision BIGINT NOT NULL, "+ "date_created TIMESTAMP NOT NULL, "+ "state CHAR(1) NOT NULL CHECK (state in ('c', 'r', 'm')), "+ "date_resolved TIMESTAMP, "+ "local_feature TEXT,"+ "unique(table_name, feature_id, local_revision))");
  }
  finally {
    conn.close();
  }
}
