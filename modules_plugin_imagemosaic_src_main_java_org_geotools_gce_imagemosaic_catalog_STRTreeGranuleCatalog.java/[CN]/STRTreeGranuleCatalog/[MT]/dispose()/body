{
  final Lock l=rwLock.writeLock();
  try {
    l.lock();
    if (index != null)     try {
      index.clear();
    }
 catch (    Exception e) {
      if (LOGGER.isLoggable(Level.FINE))       LOGGER.log(Level.FINE,e.getLocalizedMessage(),e);
    }
    if (wrappedCatalogue != null)     try {
      wrappedCatalogue.dispose();
    }
 catch (    Exception e) {
      if (LOGGER.isLoggable(Level.FINE))       LOGGER.log(Level.FINE,e.getLocalizedMessage(),e);
    }
  }
  finally {
    wrappedCatalogue=null;
    index=null;
    l.unlock();
  }
}
