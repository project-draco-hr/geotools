{
  if (L == 0) {
    return ordinates3d(list);
  }
  final int NUMBER=list.size();
  final int LEN=3 + L;
  double[] array=new double[NUMBER * LEN];
  double[] ords;
  for (int i=0; i < NUMBER; i++) {
    ords=(double[])list.get(i);
    for (int j=0; j < LEN; j++) {
      array[(i * LEN) + j]=ords[j];
    }
  }
  return array;
}
