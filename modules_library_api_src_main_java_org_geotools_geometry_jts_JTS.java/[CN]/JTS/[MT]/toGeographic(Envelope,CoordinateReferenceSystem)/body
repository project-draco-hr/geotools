{
  if (CRS.equalsIgnoreMetadata(crs,DefaultGeographicCRS.WGS84)) {
    return envelope;
  }
  final MathTransform transform;
  try {
    transform=CRS.findMathTransform(crs,DefaultGeographicCRS.WGS84,true);
  }
 catch (  FactoryException exception) {
    throw new TransformPathNotFoundException(Errors.format(ErrorKeys.CANT_TRANSFORM_ENVELOPE,exception));
  }
  return transform(envelope,transform);
}
