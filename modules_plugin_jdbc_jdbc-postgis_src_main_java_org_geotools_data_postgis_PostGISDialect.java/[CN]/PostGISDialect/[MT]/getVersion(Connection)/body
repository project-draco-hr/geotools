{
  if (version == null) {
    Statement st=null;
    ResultSet rs=null;
    try {
      st=conn.createStatement();
      rs=st.executeQuery("select public.PostGIS_Lib_Version()");
      if (rs.next()) {
        version=new Version(rs.getString(1));
      }
    }
  finally {
      dataStore.closeSafe(rs);
      dataStore.closeSafe(st);
    }
  }
  return version;
}
