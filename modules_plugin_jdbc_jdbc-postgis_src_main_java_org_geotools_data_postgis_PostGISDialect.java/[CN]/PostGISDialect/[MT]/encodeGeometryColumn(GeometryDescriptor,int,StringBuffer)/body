{
  boolean geography="geography".equals(gatt.getUserData().get(JDBCDataStore.JDBC_NATIVE_TYPENAME));
  sql.append("encode(");
  sql.append("ST_AsBinary(");
  if (!geography) {
    sql.append("ST_Force_2D(");
  }
  encodeColumnName(gatt.getLocalName(),sql);
  if (!geography) {
    sql.append(")");
  }
  sql.append("),'base64')");
}
