{
  super(msg);
  this.metadata=metadata;
  if (t != null)   this.initCause(t);
  if (metadata != null) {
    final int numGeoKeys=metadata.getNumGeoKeys();
    if (numGeoKeys > 0) {
      geoKeys=new GeoKeyEntry[numGeoKeys];
      for (int i=0; i < numGeoKeys; i++) {
        geoKeys[i]=metadata.getGeoKeyRecordByIndex(i);
      }
    }
  }
}
