{
  Catalog catalog=(Catalog)context.getService(context.getServiceReference(Catalog.class.getName()));
  ServiceFactory factory=(ServiceFactory)context.getService(context.getServiceReference(ServiceFactory.class.getName()));
  HttpService service=(HttpService)context.getService(context.getServiceReference(HttpService.class.getName()));
  service.registerServlet("/Add",new AddServiceHandler(catalog,factory),new Properties(),null);
  service.registerServlet("/List",new ListServicesHandler(catalog),new Properties(),null);
}
