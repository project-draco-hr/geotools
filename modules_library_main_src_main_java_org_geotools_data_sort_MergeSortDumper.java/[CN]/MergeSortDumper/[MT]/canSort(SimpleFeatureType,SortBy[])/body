{
  if (sortBy == SortBy.UNSORTED) {
    return true;
  }
  for (  AttributeDescriptor ad : schema.getAttributeDescriptors()) {
    Class<?> binding=ad.getType().getBinding();
    if (!Serializable.class.isAssignableFrom(binding)) {
      return false;
    }
  }
  for (  SortBy sb : sortBy) {
    if (sb != SortBy.NATURAL_ORDER && sb != SortBy.REVERSE_ORDER) {
      AttributeDescriptor ad=schema.getDescriptor(sb.getPropertyName().getPropertyName());
      if (ad == null) {
        return false;
      }
      Class<?> binding=ad.getType().getBinding();
      if (!Comparable.class.isAssignableFrom(binding) || Geometry.class.isAssignableFrom(binding)) {
        return false;
      }
    }
  }
  return true;
}
