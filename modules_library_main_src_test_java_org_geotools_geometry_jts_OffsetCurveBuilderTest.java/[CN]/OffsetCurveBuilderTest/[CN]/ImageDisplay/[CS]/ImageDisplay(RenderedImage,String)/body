{
  JPanel content=new JPanel(new BorderLayout());
  this.setContentPane(content);
  this.setTitle(title);
  final JLabel topLabel=new JLabel("<html><body>" + "The curve (black) and its offset (red) " + "</html></body>");
  topLabel.setBorder(new EmptyBorder(4,4,4,4));
  content.add(topLabel,BorderLayout.NORTH);
  ScrollingImagePanel imageViewer=new ScrollingImagePanel(image,Math.min(400,image.getWidth()) + 100,Math.min(400,image.getHeight()) + 100);
  content.add(imageViewer);
  JButton close=new JButton("Close");
  close.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      ImageDisplay.this.setVisible(false);
    }
  }
);
  content.add(close,BorderLayout.SOUTH);
  pack();
}
