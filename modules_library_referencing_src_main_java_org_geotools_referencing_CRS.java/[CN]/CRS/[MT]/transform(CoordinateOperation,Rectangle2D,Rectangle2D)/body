{
  if (envelope == null) {
    return null;
  }
  GeneralEnvelope result=transform(operation,new GeneralEnvelope(envelope));
  if (destination == null) {
    return result.toRectangle2D();
  }
 else {
    destination.setFrame(result.getMinimum(0),result.getMinimum(1),result.getSpan(0),result.getSpan(1));
    return destination;
  }
}
