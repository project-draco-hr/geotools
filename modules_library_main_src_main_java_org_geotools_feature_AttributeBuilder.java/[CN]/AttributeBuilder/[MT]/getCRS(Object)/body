{
  if (crs != null) {
    return crs;
  }
 else   if (geom != null && geom instanceof Geometry) {
    Object userData=((Geometry)geom).getUserData();
    if (userData != null && userData instanceof CoordinateReferenceSystem) {
      return (CoordinateReferenceSystem)userData;
    }
  }
  return null;
}
