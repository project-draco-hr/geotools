{
  HashMap<DirectPosition,Float> poitnsToDeltas=new HashMap<DirectPosition,Float>();
  for (Iterator<MappedPosition> i=this.getGridMappedPositions().iterator(); i.hasNext(); ) {
    MappedPosition mp=((MappedPosition)i.next());
    poitnsToDeltas.put(mp.getSource(),k * new Float(mp.getSource().getCoordinates()[dim] - mp.getTarget().getCoordinates()[dim]));
  }
  return poitnsToDeltas;
}
