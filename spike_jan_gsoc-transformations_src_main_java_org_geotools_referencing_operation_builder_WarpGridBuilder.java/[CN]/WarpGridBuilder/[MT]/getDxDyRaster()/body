{
  float[][] valuesDx;
  valuesDx=getDxGrid();
  float[][] valuesDy;
  valuesDy=getDyGrid();
  WritableRaster raster=RasterFactory.createBandedRaster(DataBuffer.TYPE_FLOAT,valuesDx[0].length,valuesDx.length,2,new Point(0,0));
  for (int i=0; i < valuesDx.length; i++) {
    for (int j=0; j < valuesDx[0].length; j++) {
      raster.setSample(j,i,0,valuesDx[i][j]);
      raster.setSample(j,i,1,valuesDy[i][j]);
    }
  }
  return raster;
}
