{
  Filter filter;
  filter=ECQL.toFilter("INTERSECTS(the_geom, POINT(1 2))");
  Assert.assertTrue("Disjoint was expected",filter instanceof Intersects);
  filter=ECQL.toFilter("INTERSECTS(buffer(the_geom, 10) , POINT(1 2))");
  Assert.assertTrue("Disjoint was expected",filter instanceof Intersects);
}
