{
  super.paintComponent(g);
  if (checkBaseImages()) {
    Graphics2D g2=(Graphics2D)g.create();
    for (    Layer layer : mapContent.layers()) {
      if (layer.isVisible()) {
        BufferedImage image=baseImages.get(layer);
        if (image != null) {
          g2.drawImage(image,imageOrigin.x,imageOrigin.y,null);
        }
      }
    }
    g2.dispose();
  }
}
