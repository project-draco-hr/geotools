{
  SimpleFeatureType featureType=DataUtilities.createType("whatever","a:Polygon,b:String");
  File tempFile=getTempFile();
  ShapefileDataStore shapefileDataStore=new ShapefileDataStore(tempFile.toURI().toURL());
  shapefileDataStore.createSchema(featureType);
  FeatureWriter<SimpleFeatureType,SimpleFeature> featureWriter=shapefileDataStore.getFeatureWriter(shapefileDataStore.getTypeNames()[0],Transaction.AUTO_COMMIT);
  featureWriter.close();
  shapefileDataStore.dispose();
}
