{
  File file=null;
  if (args.length > 0) {
    file=new File(args[0]);
    if (file.exists()) {
      return file;
    }
    int rtnVal=JOptionPane.showConfirmDialog(null,"Can't find " + file.getName() + ". Choose another ?","Input shapefile",JOptionPane.YES_NO_OPTION);
    if (rtnVal != JOptionPane.YES_OPTION) {
      return null;
    }
  }
  return JFileDataStoreChooser.showOpenFile("shp",null);
}
