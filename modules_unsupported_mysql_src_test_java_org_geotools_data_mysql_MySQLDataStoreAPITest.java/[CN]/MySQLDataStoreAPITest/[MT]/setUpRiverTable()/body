    for (int i=0; i < riverFeatures.length; i++) {
      SimpleFeature f=riverFeatures[i];
      String fid=f.getID().substring("river.".length());
      s.execute("INSERT INTO river (fid, id, geom, river, flow) VALUES (" + "'" + fid + "',"+ f.getAttribute("id")+ ","+ "GeometryFromText('"+ f.getAttribute("geom").toString()+ "', 0 ),"+ "'"+ f.getAttribute("river")+ "',"+ f.getAttribute("flow")+ ")");
    }
  }
  finally {
    conn.close();
  }
