{
  C/=STANDARD_CONDUCTIVITY;
  if (!(C < 5E-4)) {
    final double XR=Math.sqrt(C / (polynome(T,PSS78_C) * (1.0 + polynome(P,PSS78_E) * P / ((PSS78_D[1] * T + PSS78_D[0]) * T + 1.0 + (PSS78_D[3] * T + PSS78_D[2]) * C))));
    final double S=sal(XR,T - 15.0);
    if (!(S >= 42))     return S;
    return 35 * C + C * (C - 1) * (polynome(C,PSS78_AR) + T * (polynome(T,PSS78_AT) + C * (PSS78_CR[0] + PSS78_CR[1] * C + PSS78_CR[2] * T)));
  }
 else {
    return 0;
  }
}
