{
  if (numImages <= 0)   throw new IllegalArgumentException(Errors.format(ErrorKeys.ILLEGAL_ARGUMENT_$2,"numImages",numImages));
  this.numImages=numImages;
  if (monitor == null)   throw new NullPointerException(Errors.format(ErrorKeys.NULL_ARGUMENT_$1,"monitor"));
  this.monitor=monitor;
  init();
}
