{
  boolean isFeatureCollection=false;
  if (!(isSimple(root))) {
    throw new Exception("couldnt parse the SLD Inline features!");
  }
  Node fc=getNode(root,"FeatureCollection");
  if (fc != null) {
    isFeatureCollection=true;
    root=fc;
  }
  featureType=makeFeatureType(root,isFeatureCollection);
  if (featureType == null)   throw new Exception("SLD InlineFeature Parser - couldnt determine a FeatureType.  See help for whats supported.");
  makeFeatures(root,isFeatureCollection);
  if (features.size() == 0)   throw new Exception("SLD InlineFeature Parser - didnt find any features!");
  buildStore();
}
