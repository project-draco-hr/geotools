{
  double sumX=0;
  double sumY=0;
  for (int i=0; i < vertices.length; i++) {
    sumX=sumX + vertices[i].getCoordinates()[0];
    sumY=sumY + vertices[i].getCoordinates()[1];
  }
  sumX=sumX / vertices.length;
  sumY=sumY / vertices.length;
  for (int i=0; i < vertices.length; i++) {
    vertices[i].getCoordinates()[0]=(scale * (vertices[i].getCoordinates()[0] - sumX)) + sumX;
    vertices[i].getCoordinates()[1]=(scale * (vertices[i].getCoordinates()[1] - sumY)) + sumY;
  }
}
