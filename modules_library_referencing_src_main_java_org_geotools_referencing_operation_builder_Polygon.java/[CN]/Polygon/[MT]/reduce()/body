{
  ArrayList<DirectPosition> redCoords=new ArrayList<DirectPosition>();
  for (int i=0; i < vertices.length; i++) {
    redCoords.add(new DirectPosition2D(vertices[i].getCoordinateReferenceSystem(),vertices[i].getCoordinates()[0] - vertices[0].getCoordinates()[0],vertices[i].getCoordinates()[1] - vertices[0].getCoordinates()[1]));
  }
  return redCoords;
}
