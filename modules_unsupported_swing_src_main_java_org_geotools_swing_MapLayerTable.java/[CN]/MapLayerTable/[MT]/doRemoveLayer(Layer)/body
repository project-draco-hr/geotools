{
  if (confirmRemove) {
    int confirm=JOptionPane.showConfirmDialog(null,stringRes.getString("confirm_remove_layer_message"),stringRes.getString("confirm_remove_layer_title"),JOptionPane.YES_NO_OPTION);
    if (confirm != JOptionPane.YES_OPTION) {
      return;
    }
  }
  mapPane.getMapContent().removeLayer(layer);
}
