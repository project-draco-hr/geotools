{
  AttributeDescriptor result=null;
  table=table.trim().toLowerCase();
  CoordinateReferenceSystem crs=getCoverage().getLibrary().getCoordinateReferenceSystem();
  if (crs != null) {
    result=new AttributeTypeBuilder().binding(Geometry.class).nillable(true).length(-1).crs(crs).buildDescriptor("GEOMETRY");
  }
 else {
    result=new AttributeTypeBuilder().binding(Geometry.class).nillable(true).buildDescriptor("GEOMETRY");
  }
  columns.add(result);
  setGeometryFactory(table);
  return result;
}
