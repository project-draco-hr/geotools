{
  int idx=0;
  int distance=Integer.MAX_VALUE;
  for (int i=0; i < colors[0].length; i++) {
    int dr=r - (colors[0][i] & 0xFF);
    int dg=g - (colors[1][i] & 0xFF);
    int db=b - (colors[2][i] & 0xFF);
    int da=a - (colors[3][i] & 0xFF);
    int d=3 * dr * dr + 4 * dg * dg + 2 * db * db + 4 * da * da;
    if (d < distance) {
      distance=d;
      idx=i;
      if (distance == 0) {
        break;
      }
    }
  }
  return idx;
}
