{
  HashSet<Simplex2D> hs=getSimplices();
  Simplex2D s0=null;
  Simplex2D s1=null;
  for (Iterator<Simplex2D> it=hs.iterator(); it.hasNext(); ) {
    Simplex2D s=it.next();
    if (s.hasPoint(node2D)) {
      if (s0 == null) {
        s0=s;
      }
 else       if (s1 == null) {
        s1=s;
        return new Simplex2D[]{s0,s1};
      }
    }
  }
  return (s0 == null) ? null : new Simplex2D[]{s0};
}
