      try {
        st.execute(sql);
      }
  finally {
        closeSafe(st);
      }
    }
  }
  finally {
    closeSafe(tables);
  }
  tables=cx.getMetaData().getTables(null,databaseSchema,GEOMETRY_TABLE,null);
  try {
    if (!tables.next()) {
      String sql=createGeometryTableSQL(cx);
      LOGGER.log(Level.FINE,"Creating geometry table: {0}",sql);
      Statement st=cx.createStatement();
      try {
        st.execute(sql);
      }
  finally {
        closeSafe(st);
