{
  AttributeType simpleContentType=getSimpleContentType(type);
  Object convertedValue=FF.literal(value).evaluate(value,getSimpleContentType(type).getBinding());
  Name name=new NameImpl(null,"simpleContent");
  AttributeDescriptor descriptor=new AttributeDescriptorImpl(simpleContentType,name,1,1,true,(Object)null);
  return new AttributeImpl(convertedValue,descriptor,null);
}
