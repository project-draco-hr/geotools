{
  final int scaleX=XMath.sgn(tr.getScaleX());
  final int scaleY=XMath.sgn(tr.getScaleY());
  final int shearX=XMath.sgn(tr.getShearX());
  final int shearY=XMath.sgn(tr.getShearY());
  if (scaleX == scaleY && shearX == -shearY)   return +1;
  if (scaleX == -scaleY && shearX == shearY)   return -1;
  return 0;
}
