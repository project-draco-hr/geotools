{
  this.config=config;
  lsnMgr=new FeatureListenerManager();
  layers=new ArrayList<MongoLayer>();
  log.info("MongoDataStore; layers=" + layers);
  try {
    crs=CRS.decode("EPSG:4326");
  }
 catch (  Throwable t) {
    crs=DefaultGeographicCRS.WGS84;
  }
  if (layers.size() == 0) {
    getLayers();
  }
}
