{
  scanForPlugins();
  final Iterator<GridFormatFactorySpi> it=getServiceRegistry().getServiceProviders(GridFormatFactorySpi.class,true);
  final Set<GridFormatFactorySpi> formats=new HashSet<GridFormatFactorySpi>();
  while (it.hasNext()) {
    final GridFormatFactorySpi spi=it.next();
    if (spi.isAvailable())     formats.add(spi);
  }
  return Collections.unmodifiableSet(formats);
}
