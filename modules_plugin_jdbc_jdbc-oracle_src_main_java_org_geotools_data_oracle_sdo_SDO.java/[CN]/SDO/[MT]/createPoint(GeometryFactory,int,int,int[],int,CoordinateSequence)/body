{
  final int STARTING_OFFSET=STARTING_OFFSET(elemInfo,element);
  final int etype=ETYPE(elemInfo,element);
  final int INTERPRETATION=INTERPRETATION(elemInfo,element);
  final int LENGTH=coords.size() * D(GTYPE);
  if (!(STARTING_OFFSET >= 1) || !(STARTING_OFFSET <= LENGTH))   throw new IllegalArgumentException("Invalid ELEM_INFO STARTING_OFFSET ");
  if (etype != ETYPE.POINT)   throw new IllegalArgumentException("ETYPE " + etype + " inconsistent with expected POINT");
  if (INTERPRETATION != 1) {
    LOGGER.warning("Could not create JTS Point with INTERPRETATION " + INTERPRETATION + " - we only expect 1 for a single point");
    return null;
  }
  Point point=gf.createPoint(subList(gf.getCoordinateSequenceFactory(),coords,GTYPE,elemInfo,element,false));
  point.setSRID(SRID);
  return point;
}
