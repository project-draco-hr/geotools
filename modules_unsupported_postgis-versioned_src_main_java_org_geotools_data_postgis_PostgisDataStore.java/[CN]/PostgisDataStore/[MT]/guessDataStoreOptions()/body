{
  PostgisDBInfo dbInfo=getDBInfo();
  if (dbInfo == null) {
    LOGGER.severe("Could not obtain PostgisDBInfo");
    byteaEnabled=true;
    byteaWKB=false;
    useGeos=true;
    schemaEnabled=true;
  }
 else {
    byteaEnabled=dbInfo.isByteaEnabled();
    if (dbInfo.getMajorVersion() >= 1) {
      byteaWKB=true;
    }
    useGeos=dbInfo.isGeosEnabled();
    schemaEnabled=dbInfo.isSchemaEnabled();
  }
}
