{
  thread=Thread.currentThread();
  boolean done=false;
  while (!done) {
    try {
      RenderingRequest request=requests.take();
      if (request instanceof EndRequest || renderingStopRequested) {
        done=true;
      }
 else {
        request.execute();
      }
    }
 catch (    InterruptedException e) {
      if (renderingStopRequested) {
        done=true;
      }
    }
catch (    Throwable t) {
      fireErrorEvent(t);
    }
  }
}
